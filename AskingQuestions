# Contains all Ch 2 Labs

def main():
  #all IF labs
  x = input("Enter a number for x: ")
  x = int(x)
  y = input("Enter a number for y: ")
  y = int(y)
  
  
  if x == y:
    print("x = y is True")
    print("x is y")
    print(x, "is equal to", y)
    print(x, "=", y)
  else:
    print("x = y is False")
    print("x is not y")
    print(x, "is not equal to", y)
    print(x, "!=", y)
  
  if x != y:
    print("x != y is True")
    print("x is not y")
    print(x, "is not equal to", y)
  else:
    print("x != y is False")
    print("x is y")
    print(x, "is equal to", y)
  
  if x > y:
    print("x > y is True")
    print(x, "greater than", y)
  else:
    print("x > y is False")
    print(x, "less than", y)
  
  if x < y:
    print("x < y is True")
    print(x, "less than", y)
  else:
    print("x < y is False")
    print(x, "greater than", y)
  
  if x >= y:
    print("x >= y is True")
    print(x, "greater than or equal to", y)
  elif x<=y:
    print("x <= y is True")
    print(x, "less than or equal to", y)
  
  print("asking questions is over")
main()


print("-----------------------------------------------")
print("Flow Control - IF/ELIF 1 Labs are begining")

print('This is a Guessing Game')
print("Ready to play?")
import random

def main():
  var1 = random.randint(1,5)
  print("chosen number:", var1)
  var2 = 3

  while var1 != var2:
    print("Wrong! Trying again!")
    var1 = random.randint(1,5)
    print("chosen number: ", var1)
  else:
    print("Correct! The number was 3.")
main()

