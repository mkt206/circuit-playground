# Lab 3
def main():
  x = input("enter a number > ")
  print(x)
  print(type(x))
  try:
    x = int(x)
  except ValueError:
    print("That wasn't a number. Enter a valid number. à² _à² ")
  else:
    y = x + 5
    print(y)
main()

# Lab 4
def main():
  dataGood = False
  while dataGood == False:
    try:
      my_number = int(input("enter a number > "))
    except ValueError:
      print("That wasn't a number. Enter a valid number. à² _à² ")
    else:
      print(my_number, 'is a number')
      dataGood = True
    print('done')
main()

# Lab 5
def main():
  my_number = input("enter a number > ")
  try:
    my_number = int(my_number)
    print(my_number, 'is a number')
  except ValueError:
    print('Please enter a number')
    print(my_number, 'is NOT a number')
  print('done')
main()

#8.1.2.3.7* - Python - Ch2 - Flow Control - guess-3.py - TRY/EXCEPT - ğŸ› ï¸ LAB Activity - âš“
def main():
  data = False
  var2 = 3
  while data == False:
    try:
      var1 = int(input("Enter a number between 1 and 5: "))
    except ValueError:
      print("That wasn't a number. Enter a valid number. à² _à² ")
    else:
      data = True
      while var1 != var2:
        if var1 - var2 == 1 or var2 - var1 == 1:
          print("close! You are Â±1 away from the answer")
        else:
          print("Wrong! Try again!")
        var1 = input("Enter a number between 1 and 5: ")
        var1 = int(var1)
        print("you chose: ", var1)
      else:
        print("Correct! The number was 3.")
  print("you chose: ", var1)
main()
